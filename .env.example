# ==== Database Configuration ====
# Use the Docker service name in container, local dev, or cloud instance
DATABASE_URL=postgresql://postgres:password@db:5432/learnlab
# DATABASE_URL=postgresql://postgres:password@localhost:5432/learnlab
# DATABASE_URL=postgresql://postgres:password@your-cloud-instance:5432/postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_MULTIPLE_DATABASES=airflow,learnlab

# ==== JWT Configuration ====
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==== AWS Configuration ====
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_BUCKET_NAME=your-bucket-name
AWS_REGION=us-east-1

# ==== Server Configuration ====
DEBUG=True
ENVIRONMENT=development
NODE_ENV=development

# ==== API URLs ====
# Docker environment
NEXT_PUBLIC_API_URL=http://backend:8000
API_URL=http://backend:8000
# Local environment
# NEXT_PUBLIC_API_URL=http://localhost:8000
# Production environment 
# NEXT_PUBLIC_API_URL=http://your-production-url:8000

# ==== Docker Configuration ====
DOCKER_USERNAME=your-docker-username
DOCKER_TOKEN=your-docker-token
IMAGE_TAG=latest

# ==== API Keys ====
OPENAI_API_KEY=your_openai_api_key
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_INDEX_NAME=your-pinecone-index-name

# ==== Vector Database ====
UPSTASH_VECTOR_REST_URL=your_upstash_url
UPSTASH_VECTOR_REST_TOKEN=your_upstash_token

